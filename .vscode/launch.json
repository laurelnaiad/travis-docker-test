{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--no-timeouts", "--debug", "test/test.js"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "stopOnEntry": false,
      "outFiles": [
        "${workspaceRoot}**/*.js"
      ]
    }
  ]
}
